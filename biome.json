{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "includes": [
      "packages/**",
      "examples/**",
      "scripts/**",
      "package.json",
      "tsconfig.json",
      "tsconfig.base.json"
    ],
    "ignoreUnknown": false
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 100,
    "attributePosition": "multiline"
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "warn"
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },

  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },

  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
